#!/usr/bin/env python

import sys
import argparse
import datetime
import requests
from os.path import basename
from bs4 import BeautifulSoup
import matplotlib.pyplot as plt
from wordcloud import WordCloud, STOPWORDS

parser = argparse.ArgumentParser(prog=basename(sys.argv[0]), description="generate a word cloud")
parser.add_argument("-i", "--ignore", default="", help="ignore these csv of tokens")
parser.add_argument("url", help="url for which to generate a word cloud")

args = parser.parse_args()

def log(msg):
    print(datetime.datetime.now().isoformat(), msg)

log("fetching page")
resp = requests.get(args.url)
if resp.status_code != 200:
    print(resp.status_code, resp.body)
    sys.exit(1)

log("extracting text")
soup = BeautifulSoup(resp.content, "html.parser")
ignored_words = ["[document]", "noscript", "header", "html", "meta", "head", "input", "script", "style"]

normalized = "" 
for t in soup.find_all(string=True):
    if t.parent.name not in ignored_words:
        normalized += f"{t} "

normalized = normalized.lower()

if args.ignore:
    for i in args.ignore.split(","):
        # include leading/trailing space to remove only entire words
        normalized = normalized.replace(f"{i.lower()} ", "")
        normalized = normalized.replace(f" {i.lower()}", "")

log("generating cloud")
wc = WordCloud(width=800, height=800, background_color="white", stopwords=set(STOPWORDS), min_font_size=10)
wc.generate(normalized)

log("creating image")
plt.figure(figsize=(8, 8), facecolor=None)
plt.imshow(wc)
plt.axis("off")
plt.tight_layout(pad=0)

plt.show()
